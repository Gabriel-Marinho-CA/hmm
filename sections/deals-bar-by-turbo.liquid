{% assign main = section.settings %}

{% style %}
    .section-{{ section.id }}-padding {
    padding-top: {{ main.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ main.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ main.padding_top }}px;
      padding-bottom: {{ main.padding_bottom }}px;
    }
  }
  .section-{{ section.id }} {
    border: 3px solid {{ main.text_color }};
    border-right: none;
    border-left: none;

    & .wrapper-deals {
      background:{{ main.background_section_color  }};
      padding: 24px 0;
    }

    & .deal-slide {
      width:fit-content;
    }

    & .deals-swiper {
      -webkit-transition-timing-function:linear!important;
   -o-transition-timing-function:linear!important;
   transition-timing-function:linear!important;
    }

    & * {
      color: {{ main.text_color }};
      font-size: 32px;
      font-weight: 700;
      line-height: 1;
      letter-spacing: 1.28px;
      text-align: center;
      text-underline-position: from-font;
      text-decoration-skip-ink: none;
      margin:0;
      padding:0;

      @media (max-width:1000px) {
        font-size:16px;
      }
    }

    & .deal-wrapper {
        display:flex;
        align-items:center;
        gap:8px;

        @media (max-width:1000px) {
          img {
            max-width:56px;
            height: auto;
          }
        }
    }

    .swiper-wrapper {
    }
  }
{% endstyle %}

<div
  {% if main.id_section %}
    id="{{ main.id_section }}"
  {% endif %}
  class="section-{{ section.id }}-padding section-{{ section.id }} deals-bar"
>
  <div class="wrapper-deals">
    <div class="swiper deals-swiper">
      <ul class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'deals' %}
            <li class="swiper-slide deal-slide">
              <div class="deal-wrapper">
                {% if block.settings.icon_deal != blank %}
                  {{
                    block.settings.icon_deal
                    | image_url: width: block.settings.icon_deal.width, height: block.settings.icon_deal.height
                    | image_tag: loading: 'lazy'
                  }}
                {% endif %}

                <div class="text-deals">
                  {{ block.settings.text_deal }}
                </div>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded',function() {
    const deals = document.querySelectorAll(".deal-slide");
    const swiperWrapper = document.querySelector(".swiper-wrapper");

    if (deals.length > 0 && deals.length < 8) {
        let index = 0;
        while (swiperWrapper.children.length < 8) {
            const clone = deals[index % deals.length].cloneNode(true);
            swiperWrapper.appendChild(clone);
            index++;
        }
    }
  })
  
  {% if main.infinite_scroll %}
    new Swiper('.section-{{ section.id }} .swiper', {
    spaceBetween: 40,
    grabCursor: true,
    a11y: false,
    freeMode: true,
    speed: 9000,
    loop: true,
    slidesPerView: 'auto',
    autoplay: {
      delay: 0.5,
      disableOnInteraction: false,
    },
    breakpoints: {
      0: {
        spaceBetween: 30,
      },
      480: {
        spaceBetween: 30,
      },
      767: {
        spaceBetween: 40,
      },
      992: {
        spaceBetween: 40,
      },
    },
  });
  {% else %}
  new Swiper('.section-{{ section.id }} .swiper', {
    spaceBetween: 16,
    slidesPerView: 'auto',
    centeredSlides: false,
    breakpoints: {
      767: {
        slidesPerView: 'auto',
        spaceBetween: 40,
        centeredSlides: true,
      },
      992: {
        spaceBetween: 40,
      },
    },
  });
  {% endif %}
</script>

{% schema %}
{
  "name": "Barra informações - turbo",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "id_section",
      "label": "ID da seção"
    },
    {
      "type": "checkbox",
      "id": "infinite_scroll",
      "label": "Rolagem automatica?",
      "default": true
    },
    {
      "type": "header",
      "content": "Cores"
    },
    {
      "type": "color",
      "id": "background_section_color",
      "label": "Cor do background da seção",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor dos textos da rolagem",
      "default": "#191970"
    },
    {
      "type": "header",
      "content": "Espaçamento"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "deals",
      "name": "Informação",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_deal",
          "label": "Icone"
        },
        {
          "type": "richtext",
          "id": "text_deal",
          "label": "Texto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Barra de informações by turbo"
    }
  ]
}
{% endschema %}
