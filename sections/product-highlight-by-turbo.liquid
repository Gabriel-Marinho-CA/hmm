{% style %}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<style>
  .product-highlight.section-{{ section.id }}-padding {
    position:relative;
    z-index:0;
    background-color:{{ section.settings.bg_color }};
    &::before {
        position: absolute;
        top: 0;
        left:0;
        z-index: -1;
        content:"";
        width: 100%;
        height: 100%;
        background-image: url("{{ section.settings.bg_image | image_url: width: section.settings.bg_image.width , height: section.settings.bg_image.height}}");
        background-repeat: round;
        opacity: .20;
    }

    .pdp_highlight {
        margin-inline: auto;
    }
    .wrapper {
      display: flex;
      align-items: center;
      gap: 3rem;
      justify-content: space-between;
      position:relative;
      @media (max-width:768px) {
      
        gap:0;
      }
      @media (min-width:1101px) and (max-width:1300px) {
        gap:6rem;
      }
      @media (max-width:1100px) {
        flex-direction: column;
        justify-content: center;
        gap:0;
      }
    }

    * {
        line-height: 1;
        margin:0;
        color: {{ section.settings.text_color }};
    }

    strong {
        color: {{ section.settings.strong_color }};
    }

    .right {
        position:relative;
        @media (max-width:768px) {
          max-width: 400px;
          margin-inline: auto;
        }
    }
    @media (max-width:768px) {
      .wrapper-pdp-image {
        img {
          width: 100%;
  height: auto;
        }
      }
    }
    .hgl-text {
        padding: 1rem;
        border-radius: 24px;
        text-align: center;
        position: absolute;
        z-index: 1;
        background-color: #FF4375;
        height: 90px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px solid {{ section.settings.strong_color }};

        @media (max-width:768px) {
          height: auto;
          border-radius: 14px;
        }
        * {
            color: {{ section.settings.strong_color }};
            font-size: 22px;
            font-weight: 600;

            @media (max-width:768px) {
              font-size:13px;
            }
        }

      &.bottom-left {
        max-width: 265px;
        bottom: 15%;
        left: -90px;

        @media (max-width:768px) {
          max-width: 168px;
          bottom: 6%;
          left: -4px;
        }
      }

      &.top-left {
        top: 37%;
        left: -22px;
        max-width: 228px;

        @media (max-width:768px) {
          top: 32%;
          left: -6px;
          max-width: 141px;
        }

      }

      &.bottom-right {
        max-width: 156px;
        right: 10px;
        top: 50%;
        text-align: start;
        padding-inline: 1.5rem;

        @media (max-width:768px) {
          max-width: 86px;
          right: 39px;
          top: 50%;
        }
      }
      &.top-right {
        right: 23px;
        top: 12%;
        max-width: 168px;
        text-align: start;
        @media (max-width:768px) {
          right: 27px;
          top: 15%;
          max-width: 106px;
        }
      }

    }

    .image {
        position: relative;

        .icon-top-left-pdp{
            position: absolute;
            top: 14%;
            left: 24%;

            @media (max-width:768px) {
              top: 10%;
              left: 23%;

            img {
              height: auto;
        max-width: 55px;
            }
            }

        }

        .icon-bottom-right-pdp {
            position: absolute;
            bottom: 0;
            right: 0;
            @media (max-width:768px) {

            img {
              max-width: 80px;
              height: auto;
            }
            }
        }
    }

    .icon-top-left {
      position: absolute;
      top:-3%;
      left:-5%;
      img  {
        max-width:70px;
        height:auto;
      }
      @media (max-width:768px) {
              display:none;
            }
    }
    .title-hgl {
      max-width: 600px;
        * {
            font-size: 78px;
            letter-spacing: 1.5px;
            font-family: "defante";
            @media (max-width:768px) {
              font-size: 36px;
              text-align: center;
            }
            @media (min-width:1000px) and (max-width:1300px) {
              font-size: 50px;
            }
        }
        strong {
            font-weight: 400;
            @media (max-width:768px) {
              font-size: 36px;
            }
            @media (min-width:1000px) and (max-width:1300px) {
              font-size: 50px;
            }
        }
    }
    .subtitle-hgl {
      margin-top: 3rem;
       margin-bottom: 5rem;
       max-width: 500px;
       @media (max-width:768px) {
        margin-bottom: 2rem;
        margin-top: 1rem;
       }
       * {
           font-size: 22px;

           @media (max-width:768px) {
            font-size: 16px;
            text-align: center;

           }
       }
    }

    .buy-btn-hgl {

      @media (max-width:1100px) {
        margin-top: 2.66rem;
        &.desktop {
          display:none
        }
      }
      @media (min-width:1101px) {
        &.mobile {
          display:none
        }
      }

      a {
          max-width:332px;
         font-size: 32px;
         font-weight: 700;
         text-decoration: none;
         border-radius: 32px;
         height: 68px;
         padding-inline: 1.5rem;
         display: flex;
         justify-content: center;
         align-items: center;

         @media (max-width:768px) {
          font-size: 23px;
          height: 50px;
          max-width: fit-content;
         }

         @media (min-width:1000px) and (max-width:1300px) {
          font-size: 24px;
          max-width: 302px;
         }
      }
    }
  }
</style>

<div
  class="product-highlight section-{{ section.id }}-padding"
  {% if section.settings.id_section %}
    id="{{ section.settings.id_section |  handleize}}"
  {% endif %}
>
  <div class="pdp_highlight page-width">
    <div class="wrapper">
      <div class="icon-top-left">
        {% if section.settings.icon_top_left != blank %}
          {{ section.settings.icon_top_left | image_url: width: 90, height: 90 | image_tag }}
        {% endif %}
      </div>
      <div class="left">
        <div class="title-hgl">
          {{ section.settings.title }}
        </div>
        <div class="subtitle-hgl">
          {{ section.settings.subtitle }}
        </div>
        <div class="buy-btn-hgl desktop">
          <a
            href="{{ section.settings.link_btn }}"
            style="background-color: {{ section.settings.btn_color_bg }}; color: {{ section.settings.btn_color_text }}"
          >
            {{ section.settings.btn_text }}
          </a>
        </div>
      </div>
      <div class="right">
        /* <div class="bottom-left hgl-text">
          {{ section.settings.bottom_left }}
        </div>
        <div class="top-left hgl-text">
          {{ section.settings.top_left }}
        </div>
        <div class="bottom-right hgl-text">
          {{ section.settings.bottom_right }}
        </div>
        <div class="top-right hgl-text">
          {{ section.settings.top_right }}
        </div> */
        <div class="image">
          {% if section.settings.product_image != blank %}
            <div class="wrapper-pdp-image">
              {{ section.settings.product_image | image_url: width: section.settings.product_image.width, height: section.settings.product_image.height | image_tag }}
            </div>
          {% endif %}

          /* {% if section.settings.icon_bottom_right_product != blank %}
            <div class="icon-bottom-right-pdp">
              {{ section.settings.icon_bottom_right_product | image_url: width: 120, height: 140 | image_tag }}
            </div>
          {% endif %} */
        </div>
      </div>
      <div class="buy-btn-hgl mobile">
        <a
          href="{{ section.settings.link_btn }}"
          style="background-color: {{ section.settings.btn_color_bg }}; color: {{ section.settings.btn_color_text }}"
        >
          {{ section.settings.btn_text }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Destaque de produto",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Cores"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Cor background",
      "default": "#FF4375"
    },
    {
      "type": "color",
      "id": "strong_color",
      "label": "Cor destaque",
      "default": "#B4FA64"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor dos textos",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "btn_color_bg",
      "label": "Cor background botão",
      "default": "#B4FA64"
    },
    {
      "type": "color",
      "id": "btn_color_text",
      "label": "Cor Texto botão",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Textos"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Titulo"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitulo"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Texto botão"
    },
    {
      "type": "url",
      "id": "link_btn",
      "label": "Link do botão"
    },
    {
      "type": "richtext",
      "id": "bottom_left",
      "label": "Texto baixo esquerda"
    },
    {
      "type": "richtext",
      "id": "top_left",
      "label": "Texto cima esquerda"
    },
    {
      "type": "richtext",
      "id": "bottom_right",
      "label": "Texto baixo direita"
    },
    {
      "type": "richtext",
      "id": "top_right",
      "label": "Texto cima direita"
    },
    {
      "type": "header",
      "content": "Imagens"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Imagem background"
    },
    {
      "type": "image_picker",
      "id": "icon_top_left",
      "label": "Icone cima esquerda"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Imagem do produto"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product highlight"
    }
  ]
}
{% endschema %}
