{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }}-padding {
    .list-custom-cards {
        display:flex;
        gap:32px;
        list-style:none;

        .link-card {
          display: block;
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
          height: 100%;
        }



        .image-card {
            position:relative;
            &::before {
                content: "";
                width: 100%;
                height: 300px;
                position: absolute;
                border-radius: 48px 48px 0 0;
                bottom: 9px;
                z-index: 0;
                background: var(--bg-color)
            }

            img {
                position:relative;
            }
        }
        .info-card {
            box-shadow: 0px 4px 24px 0px #00000014;
            border-radius: 0 0 48px 48px;
            padding: 3.3rem 2rem;
            margin-top: -14px;

            .title-card *{
                font-size: 24px;
                line-height: 1.12;
                color: #242323;
                margin: 0;
                font-weight: 600;
            }
            .subtitle-card *{
                font-size: 18px;
                color: #242323;
                line-height: 1.12;
                margin: 0;
            }
        }
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <ul class="list-custom-cards">
      {% for item in section.blocks %}
        {% if item.type == 'card' %}
          <li class="card-wrapper">
            {% if item.settings.link != blank %}
              <a class="link-card" href="{{ item.settings.link }}"></a>
            {% endif %}
            {% if item.settings.image != blank %}
              <div class="image-card" style="--bg-color:{{ item.settings.bg_color }}">
                {{
                  item.settings.image
                  | image_url: width: item.settings.image.width, height: item.settings.image.height
                  | image_tag
                }}
              </div>
            {% endif %}
            <div class="info-card">
              <div class="title-card">{{ item.settings.title }}</div>
              <div class="subtitle-card">{{ item.settings.subtitle }}</div>
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Card Image List",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "color",
          "label": "Background Color",
          "id": "bg_color"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link Card"
        },
        {
          "type": "image_picker",
          "label": "Imagem Card",
          "id": "image"
        },
        {
          "type": "richtext",
          "label": "Title Card",
          "id": "title"
        },
        {
          "type": "richtext",
          "label": "SubTitle Card",
          "id": "subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Card Image List by turbo"
    }
  ]
}
{% endschema %}
