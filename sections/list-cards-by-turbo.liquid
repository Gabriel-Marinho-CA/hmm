{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }}-padding {
    .list-custom-cards {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        align-items: flex-start;
        gap:32px;
        list-style:none;
        padding-left:0;

        .link-card {
          display: block;
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
          height: 100%;
        }

        @media (max-width:1000px) {
          gap:0;
        }

        li {
          display:grid;
          grid-template-rows: subgrid;
          gap: 0;
          grid-row: 1/3;

      
          @media (min-width:1001px) {
            margin-right:0 !important;
          }

          @media (max-width:1000px) {
            margin-right: 16px;
            width:71vw;
          }
        }

        .image-card {
            position:relative;
            @media (max-width:1000px) {
              display: flex;
              align-items: end;
              height: fit-content;
            }
            &::before {
                content: "";
                width: 100%;
                height: 74%;
                position: absolute;
                border-radius: 48px 48px 0 0;
                bottom: -6px;
                z-index: 0;
                background: var(--bg-color);

                @media (max-width:1000px) {
                bottom:0;
                }
            }

            img {
                position:relative;
                object-fit:contain;

                @media (max-width:1000px) {
                  width:100%;
                  height: auto;
                }
            }
        }
        .info-card {
            box-shadow: 0px 4px 24px 0px #00000014;
            border-radius: 0 0 48px 48px;
            padding: 3rem 2rem 4rem 3rem;
            .title-card *{
              font-family: "defante";
                font-size: 24px;
                line-height: 1.12;
                color: #242323;
                margin: 0;
                font-weight: 600;

                @media (max-width:1000px) {
                  font-size:18px;
                }
            }
            .subtitle-card *{
                font-size: 18px;
                color: #242323;
                line-height: 1.12;
                margin: 0;

                @media (max-width:1000px) {
                  font-size:16px;
                }
            }
        }
    }
    .desktop-custom-cards {
    }
    .mobile-custom-cards {

    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    {% comment %}
      <div class="desktop-custom-cards">
        <ul class="list-custom-cards">
          {% for item in section.blocks %}
            {% if item.type == 'card' %}
              <li class="card-wrapper">
                {% if item.settings.link != blank %}
                  <a class="link-card" href="{{ item.settings.link }}"></a>
                {% endif %}
                {% if item.settings.image != blank %}
                  <div class="image-card" style="--bg-color:{{ item.settings.bg_color }}">
                    {{ item.settings.image | image_url: width: 416, height: 400 | image_tag }}
                  </div>
                {% endif %}
                <div class="info-card">
                  <div class="title-card">{{ item.settings.title }}</div>
                  <div class="subtitle-card">{{ item.settings.subtitle }}</div>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    {% endcomment %}
    <div class="swiper mobile-custom-cards">
      <ul class="list-custom-cards swiper-wrapper">
        {% for item in section.blocks %}
          {% if item.type == 'card' %}
            <li class="card-wrapper swiper-slide">
              {% if item.settings.link != blank %}
                <a class="link-card" href="{{ item.settings.link }}"></a>
              {% endif %}
              {% if item.settings.image != blank %}
                <div class="image-card" style="--bg-color:{{ item.settings.bg_color }}">
                  {{ item.settings.image | image_url: width: 380, height: 364 | image_tag }}
                </div>
              {% endif %}
              <div class="info-card">
                <div class="title-card">{{ item.settings.title }}</div>
                <div class="subtitle-card">{{ item.settings.subtitle }}</div>
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<script>
  if (window.innerWidth > 1000) {
    new Swiper('.section-{{ section.id }}-padding .swiper', {
      spaceBetween: 16,
      slidesPerView: 'auto',
      centeredSlides: false,
      breakpoints: {
        767: {
          slidesPerView: 'auto',
          spaceBetween: 40,
          centeredSlides: true,
        },
        992: {
          spaceBetween: 40,
        },
      },
    });
  } else {
    new Swiper('.section-{{ section.id }}-padding .swiper', {
      spaceBetween: 10,
      slidesPerView: 'auto',
      centeredSlides: false,
      breakpoints: {
        767: {
          slidesPerView: 'auto',
          spaceBetween: 10,
          centeredSlides: true,
        },
        992: {
          slidesPerView: 'auto',
          spaceBetween: 10,
        },
      },
    });
  }
</script>
{% schema %}
{
  "name": "Card Image List",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "color",
          "label": "Background Color",
          "id": "bg_color"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link Card"
        },
        {
          "type": "image_picker",
          "label": "Imagem Card",
          "id": "image"
        },
        {
          "type": "richtext",
          "label": "Title Card",
          "id": "title"
        },
        {
          "type": "richtext",
          "label": "SubTitle Card",
          "id": "subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Card Image List by turbo"
    }
  ]
}
{% endschema %}
